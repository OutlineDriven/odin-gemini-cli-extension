{
  "model": {
    "name": "auto-gemini-3",
    "compressionThreshold": 0.5
  },
  "ide": {
    "enabled": false,
    "hasSeenNudge": true
  },
  "context": {
    "loadMemoryFromIncludeDirectories": false,
    "fileFiltering": {
      "respectGitIgnore": false
    },
    "fileName": "AGENTS.md"
  },
  "tools": {
    "autoAccept": true,
    "shell": {
      "enableInteractiveShellTool": true,
      "pager": "bat",
      "showColor": true
    },
    "truncateToolOutputThreshold": 8000000,
    "truncateToolOutputLines": 5000,
    "enableMessageBusIntegration": true,
    "exclude": [
      "ShellTool(sed -i)",
      "ShellTool(sed --in-place)",
      "ShellTool(grep -r)",
      "ShellTool(grep -R)",
      "ShellTool(sudo)",
      "ShellTool(rm -rf /)",
      "ShellTool(rm -rf /*)",
      "ShellTool(rmdir /)",
      "ShellTool(rmdir /*)",
      "ShellTool(rm -rf /dev/)",
      "ShellTool(rm -rf /proc/)",
      "ShellTool(rm -rf /sys/)",
      "ShellTool(rm -rf /tmp/)",
      "ShellTool(rm -rf /var/)",
      "ShellTool(rm -rf /mnt/)",
      "ShellTool(rm -rf /media/)",
      "ShellTool(rm -rf /run/)",
      "ShellTool(rm -rf /snap/)",
      "ShellTool(rm -rf /srv/)",
      "ShellTool(chmod 777 /*)",
      "ShellTool(chmod -R 777*)",
      "ShellTool(chmod -R 000*)",
      "ShellTool(chown -R root:root /*)",
      "ShellTool(chown -R nobody:nobody /*)",
      "ShellTool(mv /* /*)",
      "ShellTool(cp /dev/urandom /dev/*)",
      "ShellTool(cat /dev/urandom > /dev/*)",
      "ShellTool(cat /dev/zero > /dev/*)",
      "ShellTool(fdisk*)",
      "ShellTool(parted*)",
      "ShellTool(cfdisk*)",
      "ShellTool(gdisk*)",
      "ShellTool(sgdisk*)",
      "ShellTool(mkswap*)",
      "ShellTool(swapon /dev/*)",
      "ShellTool(swapoff -a)",
      "ShellTool(mount /dev/* /*)",
      "ShellTool(umount -f)",
      "ShellTool(umount -l)",
      "ShellTool(mount -o remount)",
      "ShellTool(kill -9 -1)",
      "ShellTool(killall -9)",
      "ShellTool(pkill -f)",
      "ShellTool(pkill -9)",
      "ShellTool(killall -KILL)",
      "ShellTool(init 0)",
      "ShellTool(init 6)",
      "ShellTool(shutdown)",
      "ShellTool(reboot)",
      "ShellTool(halt)",
      "ShellTool(poweroff)",
      "ShellTool(systemctl stop)",
      "ShellTool(systemctl disable)",
      "ShellTool(systemctl mask)",
      "ShellTool(systemctl isolate)",
      "ShellTool(service * stop)",
      "ShellTool(wget * | sh)",
      "ShellTool(curl * | sh)",
      "ShellTool(curl * | bash)",
      "ShellTool(curl * | zsh)",
      "ShellTool(bash <(curl)",
      "ShellTool(sh <(curl)",
      "ShellTool(zsh <(curl)",
      "ShellTool(eval $(curl)",
      "ShellTool(python -c \"exec)",
      "ShellTool(python3 -c \"exec)",
      "ShellTool(perl -e)",
      "ShellTool(ruby -e)",
      "ShellTool(node -e)",
      "ShellTool(echo * | base64 -d | sh)",
      "ShellTool(echo * | base64 -d | bash)",
      "ShellTool(nc -l)",
      "ShellTool(netcat -l)",
      "ShellTool(socat)",
      "ShellTool(telnet)",
      "ShellTool(ssh-keygen)",
      "ShellTool(openssl genrsa)",
      "ShellTool(openssl req)",
      "ShellTool(gpg --gen-key)",
      "ShellTool(iptables -F)",
      "ShellTool(iptables -X)",
      "ShellTool(iptables -P)",
      "ShellTool(ip6tables -F)",
      "ShellTool(ufw --force reset)",
      "ShellTool(ufw disable)",
      "ShellTool(shred)",
      "ShellTool(wipe)",
      "ShellTool(srm)",
      "ShellTool(secure-delete)",
      "ShellTool(find /* -delete)",
      "ShellTool(find /* -exec rm)",
      "ShellTool(find /* -type f -delete)",
      "ShellTool(xargs rm)",
      "ShellTool(yes | )",
      "ShellTool(while true; do)",
      "ShellTool(while :; do)",
      "ShellTool(for i in {1..999999})",
      "ShellTool(git push -f)",
      "ShellTool(git push --force)",
      "ShellTool(git push --force-with-lease)",
      "ShellTool(git commit --amend)",
      "ShellTool(git commit --amend --no-edit)",
      "ShellTool(git commit --amend --no-verify)",
      "ShellTool(git commit --no-verify)",
      "ShellTool(git commit --no-verify -m)",
      "ShellTool(git commit --no-verify -m -)",
      "ShellTool(git commit --no-verify -m - -)",
      "ShellTool(git commit --no-verify -m - - -)",
      "ShellTool(git commit --no-verify -m - - - -)"
    ],
    "useRipgrep": true
  },
  "security": {
    "folderTrust": {
      "featureEnabled": false
    },
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "showLineNumbers": true,
    "hideTips": true,
    "hideBanner": true,
    "showCitations": true,
    "showMemoryUsage": true,
    "footer": {
      "hideContextPercentage": false
    },
    "showModelInfoInChat": true,
    "accessibility": {
      "disableLoadingPhrases": true
    },
    "showStatusInTitle": true,
    "useFullWidth": false
  },
  "general": {
    "enablePromptCompletion": true,
    "previewFeatures": true
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  "experimental": {
    "codebaseInvestigatorSettings": {
      "enabled": true
    }
  },
  "hooks": {
    "BeforeAgent": [
      {
        "matcher": "",
        "hooks": [
          {
            "name": "show-directory-structure",
            "type": "command",
            "command": "echo 'Current directory structure (lsd):' && lsd -l -g -G --group-directories-first && echo ''",
            "description": "Show directory listing with lsd"
          },
          {
            "name": "show-git-status",
            "type": "command",
            "command": "git status",
            "description": "Show git status"
          }
        ]
      }
    ]
  }
}